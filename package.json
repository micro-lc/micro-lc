{
  "name": "micro-lc",
  "version": "2.4.3",
  "description": "The micro frontend solution by Mia-Platform",
  "type": "module",
  "license": "Apache-2.0",
  "packageManager": "yarn@4.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "c": "yarn workspace @micro-lc/iconic",
    "i": "yarn workspace @micro-lc/interfaces",
    "l": "yarn workspace @micro-lc/layout",
    "m": "yarn workspace @micro-lc/composer",
    "o": "yarn workspace @micro-lc/orchestrator",
    "initialize": "node --no-warnings --loader=ts-node/esm ./scripts/repo-scripts.ts initialize",
    "bump": "node --no-warnings --loader=ts-node/esm ./scripts/version.ts",
    "dep-version": "node --no-warnings --loader=ts-node/esm ./scripts/dep-version.ts",
    "check:types": "yarn workspaces foreach --all run check:types",
    "prepare-test": "yarn workspaces foreach --all run prepare-test",
    "build": "yarn workspaces foreach --all run build",
    "cleanup": "yarn workspaces foreach --all --parallel run cleanup",
    "lint:code": "eslint . --ext .mjs,.js,.jsx,.ts,.tsx,.schema.json --resolve-plugins-relative-to .",
    "lint:style": "stylelint **/*.{css,less}",
    "lint": "NODE_OPTIONS=--max-old-space-size=10000 yarn run-p lint:code lint:style",
    "test": "yarn workspaces foreach --all run test",
    "test:e2e": "playwright test",
    "coverage": "node --no-warnings --loader=ts-node/esm ./scripts/repo-scripts.ts coverage",
    "static-webserver": "node --no-warnings --loader=ts-node/esm tests/server.ts",
    "playground": "node --no-warnings --loader=ts-node/esm ./playground.ts",
    "playground-stop": "docker compose --file playground/docker-compose.yml down",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@micro-lc/layout": "workspace:*",
    "@micro-lc/orchestrator": "workspace:*",
    "@playwright/test": "^1.42.1",
    "@types/eslint": "^8.56.5",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@web/dev-server": "^0.4.3",
    "@web/dev-server-esbuild": "^1.0.2",
    "commander": "^11.0.0",
    "confusing-browser-globals": "^1.0.11",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-mocha": "^10.4.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "eslint-visitor-keys": "^4.0.0",
    "express": "^4.19.2",
    "glob": "^10.3.10",
    "husky": "^9.0.11",
    "jsonc-eslint-parser": "^2.4.0",
    "lit-html": "^2.8.0",
    "node-color-log": "^11.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-less": "^6.0.0",
    "rimraf": "^5.0.5",
    "stylelint": "^16.2.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^6.0.7"
  },
  "engines": {
    "node": ">=18"
  }
}
