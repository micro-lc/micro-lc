{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"CommonJS\"}",
        "NODE_ENV": "development"
      },
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["o", "ts-mocha", "src/**/${fileBasename}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Firefox Tests",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "o",
        "wtr",
        "--node-resolve",
        "test/**/${fileBasename}"
      ],
      "console": "integratedTerminal",
    }
  ]
}
