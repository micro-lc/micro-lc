{
  "name": "@micro-lc/composer",
  "version": "2.2.0",
  "type": "module",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "default": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./composer": {
      "default": "./dist/bundle/index.min.js",
      "import": "./dist/bundle/index.min.js"
    },
    "./composer.production": {
      "default": "./dist/composer.production.js",
      "import": "./dist/composer.production.js"
    },
    "./composer.development": {
      "default": "./dist/composer.development.js",
      "import": "./dist/composer.production.js"
    },
    "./composer.production?url": {
      "default": "./dist/composer.production.js",
      "import": "./dist/composer.production.js"
    }
  },
  "scripts": {
    "cleanup": "yarn run -T rimraf dist node_modules coverage",
    "check:types": "tsc --project ./scripts/tsconfig.build.json && echo \"âœ“ check types\"",
    "build:lib": "node --no-warnings --loader=ts-node/esm ./scripts/compile.esm.ts",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build": "yarn run -T run-s check:types build:lib build:dev build:prod",
    "test": "mocha 'src/**/test/**/*.test.ts'",
    "coverage": "c8 yarn test"
  },
  "devDependencies": {
    "@micro-lc/interfaces": "workspace:*",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@types/chai": "^4.3.12",
    "@types/chai-string": "^1.4.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.25",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "ajv": "^8.12.0",
    "c8": "^9.1.0",
    "chai": "^4.3.8",
    "chai-string": "^1.5.0",
    "es-module-shims": "^1.8.0",
    "esbuild": "^0.20.1",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^6.0.7",
    "vite-plugin-banner": "^0.7.1"
  },
  "dependencies": {
    "lit-html": "^2.8.0",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "es-module-shims": "*"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
